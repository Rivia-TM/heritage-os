{
  "cleanUrls": true,
  "trailingSlash": false,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/$", "dest": "/index.html" },
    { "src": "/signup/?$", "dest": "/signup.html" },
    { "src": "/forgot/?$", "dest": "/forgot.html" },
    { "src": "/terms/?$", "dest": "/terms.html" },
    { "src": "/privacy/?$", "dest": "/privacy.html" },
    { "src": "/cookies/?$", "dest": "/cookies.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    }
  ]
}
