:root{
  /* Palette (tu peux remplacer ensuite) */
  --bg: #2b4e5e;
  --text: rgba(242,241,237,.92);
  --muted: rgba(242,241,237,.70);
  --hair: rgba(242,241,237,.16);
  --field: rgba(0,0,0,.10);
  --field2: rgba(255,255,255,.08);

  /* Typo */
  --font: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;

  /* Sizing (version épurée, pas géante) */
  --title-size: clamp(26px, 3.4vw, 44px);  /* tu voulais +1/+2pt, pas x8 */
  --title-lh: 1.10;
  --field-w: min(560px, 86vw);
  --field-h: 52px;

  /* Brand */
  --brand-w: 150px; /* taille logo “petit mais visible” */
}

*{ box-sizing:border-box; }
html,body{ height:100%; }
body{
  margin:0;
  font-family: var(--font);
  color: var(--text);
  background: var(--bg);
  overflow:hidden;
}

.bg{
  position:fixed;
  inset:0;
  z-index:0;
}
.bg-media{
  position:absolute;
  inset:0;
  width:100%;
  height:100%;
  object-fit:cover;
}
.bg-overlay{
  position:absolute;
  inset:0;
  background: linear-gradient(180deg, rgba(0,0,0,.20), rgba(0,0,0,.18));
}
.hidden{ display:none !important; }

.page{
  position:relative;
  z-index:1;
  min-height:100vh;
  display:flex;
  align-items:center;
  justify-content:center;
  padding: 40px 18px 90px; /* bottom space for footer */
}

.auth{
  width: min(820px, 92vw);
  text-align:center;
}

.brand{
  display:flex;
  align-items:center;
  justify-content:center;
  margin: 0 0 18px;
}
.brand-media{
  width: var(--brand-w);
  height: auto;
  max-height: 70px;
  object-fit: contain;
  opacity: .95;
  filter: drop-shadow(0 8px 22px rgba(0,0,0,.18));
}

.title{
  margin: 0 0 22px;
  font-weight: 300;
  letter-spacing: .2px;
  font-size: var(--title-size);
  line-height: var(--title-lh);
}

.step{ margin: 0 0 8px; }

.field{
  width: var(--field-w);
  margin: 0 auto;
  position: relative;
}
.input{
  width:100%;
  height: var(--field-h);
  border-radius: 14px;
  padding: 0 54px 0 18px;
  border: 1px solid var(--hair);
  outline: none;
  background: linear-gradient(180deg, var(--field2), var(--field));
  color: var(--text);
  font-size: 16px;
  font-weight: 300;
}
.input::placeholder{ color: rgba(242,241,237,.52); }

.go{
  position:absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
  width: 34px;
  height: 34px;
  border-radius: 999px;
  border: 1px solid var(--hair);
  background: rgba(0,0,0,.10);
  color: var(--text);
  cursor:pointer;
}
.go:active{ transform: translateY(-50%) scale(.98); }

.status{
  margin: 10px auto 0;
  width: var(--field-w);
  min-height: 18px;
  opacity: 0;
  color: rgba(242,241,237,.72);
  font-size: 13px;
  font-weight: 300;
}

/* Footer bottom bar */
.footer{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 18px;
  z-index: 2;

  width: min(860px, 92vw);
  margin: 0 auto;

  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;

  gap: 12px;
  padding: 0 6px;

  font-size: 14px;
  font-weight: 300;
  color: var(--muted);
}

.remember{
  justify-self: start;
  display: inline-flex;
  align-items: center;
  gap: 10px;
  user-select: none;
}
.remember input{
  width: 14px;
  height: 14px;
  accent-color: rgba(242,241,237,.80);
}

.footer-link{
  color: rgba(242,241,237,.78);
  text-decoration: none;
  justify-self: center;
}
.footer-link:hover{ text-decoration: underline; }
#forgot{ justify-self: end; }

/* BEGIN:BGVIDEO_SAFE */
.bg {
  position: fixed;
  inset: 0;
  z-index: 0;
  overflow: hidden;
}
.bg-media {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
.bg-overlay {
  position: absolute;
  inset: 0;
  z-index: 1;
  background: rgba(0,0,0,.20);
}
/* IMPORTANT: ton contenu doit être au-dessus du BG */
main.page, .page, section.auth {
  position: relative;
  z-index: 2;
}
/* END:BGVIDEO_SAFE */
/* === FORCE VIDEO BACKGROUND FIX === */

.bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  overflow: hidden;
}

.bg-media {
  position: absolute;
  top: 50%;
  left: 50%;
  min-width: 100%;
  min-height: 100%;
  width: auto;
  height: auto;
  transform: translate(-50%, -50%);
  object-fit: cover;
  pointer-events: none;
}

.bg-overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.35);
}

video.bg-media::-webkit-media-controls {
  display: none !important;
}

video.bg-media {
  outline: none;
}

/* === BG VIDEO: anti-controls + fullcover === */
.bg { position: fixed; inset: 0; z-index: -1; overflow: hidden; }
.bg-media { position: absolute; inset: 0; width: 100%; height: 100%; object-fit: cover; pointer-events: none; }
.bg-overlay { position: absolute; inset: 0; background: rgba(0,0,0,.35); pointer-events: none; }

/* Safari/iOS: tente de masquer les contrôles s'ils apparaissent */
video.bg-media::-webkit-media-controls,
video.bg-media::-webkit-media-controls-panel,
video.bg-media::-webkit-media-controls-play-button,
video.bg-media::-webkit-media-controls-start-playback-button {
  display: none !important;
  -webkit-appearance: none !important;
}
